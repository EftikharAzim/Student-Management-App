@model StudentManagement.Web.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-danger">Delete Student</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title">@Model.FirstName @Model.LastName</h4>
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
        <p class="card-text"><strong>Age:</strong> @Model.Age</p>
        <p class="text-danger">Are you sure you want to delete this student?</p>
    </div>
</div>

<div class="mt-3 text-center">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
